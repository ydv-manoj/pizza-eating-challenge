{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",  // To ignore unused vars in TypeScript
    "react/no-unescaped-entities": "off",         // To ignore unescaped entities warning in React
